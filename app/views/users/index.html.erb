<section class="indexU">
<h1>Blog App</h1>
  <div class="listus">
    <ul class="Ulist">
      <% @users.each do |user| %>
        <li class="user">
          <div class="photo">
            <%=image_tag("thumbnail.png", alt: "thumbnail")%>
          </div>
          <div class="name">
          <h2><%= link_to user.name, user_path(user.id) %></h2>
          <p>
            Number of posts: <%= user.posts_counter %>
          </p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</section>
