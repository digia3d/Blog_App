<section class="indexU">
  <ul class="Ulist">
    <% @users.each do |user| %>
      <li class="user">
        <div class="photo">
          <img src="<%= user.photo %>" alt="<%= user.name %>" />
        </div>
        <div class="name">
        <h2><%= link_to user.name, user_path(user.id) %></h2>
        <p>
          Number of posts: <%= user.posts_counter %>
        </p>
        </div>
      </li>
    <% end %>
  </ul>
</section>
