<h1>New Post</h1>

<%= form_with model: @post, url: user_posts_path, method: :post, locals: true, scope: :new_post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :Text %>
    <%= f.text_area :text %>
  </div>

  <div>
    <%= f.submit "Submit"%>
  </div>
<% end %>